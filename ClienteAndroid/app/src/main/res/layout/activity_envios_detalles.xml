<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título de la pantalla -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logo"
            android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalle del envío"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>

        <!-- Información del envío -->
        <TextView
            android:id="@+id/guia_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guía:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/guia_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/origen_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origen:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/origen_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/destino_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destino:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/destino_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/paquetes_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paquetes:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/paquetes_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/estatus_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estatus:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/estatus_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/cliente_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/cliente_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            />

        <!-- Botón para actualizar estatus -->
        <Button
            android:id="@+id/btn_actualizar_estatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Actualizar Estatus"
            android:backgroundTint="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
